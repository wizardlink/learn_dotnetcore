@model PersonResponse
@{
    ViewBag.Title = "Delete Person";
}

<a asp-controller="Persons" asp-action="Index" class="link-hover">Back to Persons List</a>
<h2>Delete Person</h2>
<h3>Are you sure you want to delete this person?</h3>

<div class="center-box">
    <form asp-controller="Persons" asp-action="Delete" method="post">
        <input type="hidden" asp-for"PersonID" />

        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="PersonName" class="form-label pt">Person Name</label>
            </div>

            <div class="flex-1">
                <input asp-for="PersonName" class="form-input" disabled />
                <span asp-validation-for="PersonName" class="text-red"></span>
            </div>
        </div>

        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="Email" class="form-label pt">Email</label>
            </div>

            <div class="flex-1">
                <input asp-for="Email" class="form-input" disabled />
                <span asp-validation-for="Email" class="text-red"></span>
            </div>
        </div>

        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="DateOfBirth" class="form-label pt">Date of Birth</label>
            </div>

            <div class="flex-1">
                <input asp-for="DateOfBirth" class="form-input" disabled />
                <span asp-validation-for="DateOfBirth" class="text-red"></span>
            </div>
        </div>

        <div class="form-field flex">
            <div class="w-25">
                <label class="form-label">Gender</label>
            </div>

            <div class="flex-1">
                @foreach (var gender in Enum.GetNames<GenderOptions>())
                {
                    <input type="radio" asp-for="Gender" value="@gender" class="ml" disabled />
                    <label asp-for="@gender">@gender</label>
                }
                <span asp-validation-for="Gender" class="text-red"></span>
            </div>
        </div>

        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="CountryID" class="form-label pt">Country</label>
            </div>

            <div class="flex-1">
                <select asp-for="CountryID" asp-items="@ViewBag.Countries" class="form-input" disabled>
                    <option value="">Please select...</option>
                </select>
                <span asp-validation-for="CountryID" class="text-red"></span>
            </div>
        </div>

        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="Address" class="form-label pt">Address</label>
            </div>

            <div class="flex-1">
                <textarea asp-for="Address" class="form-input" disabled></textarea>
                <span asp-validation-for="Address" class="text-red"></span>
            </div>
        </div>

        <div class="form-field flex">
            <div class="w-25"></div>

            <div class="flex-1">
                <input asp-for="ReceiveNewsLetters" value="true" disabled />
                <label asp-for="ReceiveNewsLetters" class="form-label">Receive News Letters</label>
                <span asp-validation-for="ReceiveNewsLetters" class="text-red"></span>
            </div>
        </div>

        <div class="form-field flex">
            <div class="w-25"></div>

            <div class="flex-1">
                <button class="button button-red-back">Delete</button>
            </div>
        </div>
    </form>
</div>
